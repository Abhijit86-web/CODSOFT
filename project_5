contacts = []


def add_contact():
    name = input("Enter name: ")
    phone = input("Enter phone number: ")
    email = input("Enter email: ")
    address = input("Enter address: ")

    contacts.append({
        "name": name,
        "phone": phone,
        "email": email,
        "address": address
    })

    print(f"âœ… Contact '{name}' added successfully!")


def view_contacts():
    if not contacts:
        print("ğŸ“­ No contacts found.")
        return

    print("\nğŸ“‹ Contact List:")
    for i, contact in enumerate(contacts, start=1):
        print(f"{i}. {contact['name']} - {contact['phone']}")


def search_contact():
    keyword = input("ğŸ” Enter name or phone number to search: ").lower()
    found = False

    for contact in contacts:
        if keyword in contact["name"].lower() or keyword in contact["phone"]:
            print("\nğŸ” Contact Found:")
            print(f"Name: {contact['name']}")
            print(f"Phone: {contact['phone']}")
            print(f"Email: {contact['email']}")
            print(f"Address: {contact['address']}")
            found = True
            break

    if not found:
        print("âŒ Contact not found.")


def update_contact():
    keyword = input("âœï¸ Enter name of contact to update: ").lower()
    for contact in contacts:
        if keyword == contact["name"].lower():
            print("Leave field empty to keep current value.")
            name = input(f"New name [{contact['name']}]: ") or contact["name"]
            phone = input(f"New phone [{contact['phone']}]: ") or contact["phone"]
            email = input(f"New email [{contact['email']}]: ") or contact["email"]
            address = input(f"New address [{contact['address']}]: ") or contact["address"]

            contact.update({
                "name": name,
                "phone": phone,
                "email": email,
                "address": address
            })
            print("âœ… Contact updated.")
            return

    print("âŒ Contact not found.")


def delete_contact():
    keyword = input("ğŸ—‘ï¸ Enter name of contact to delete: ").lower()
    for contact in contacts:
        if keyword == contact["name"].lower():
            contacts.remove(contact)
            print(f"ğŸ—‘ï¸ Contact '{contact['name']}' deleted.")
            return
    print("âŒ Contact not found.")


def main():
    while True:
        print("\n===== ğŸ“± Contact Management System =====")
        print("1. Add Contact")
        print("2. View Contacts")
        print("3. Search Contact")
        print("4. Update Contact")
        print("5. Delete Contact")
        print("6. Exit")

        choice = input("Choose an option (1-6): ")

        if choice == "1":
            add_contact()
        elif choice == "2":
            view_contacts()
        elif choice == "3":
            search_contact()
        elif choice == "4":
            update_contact()
        elif choice == "5":
            delete_contact()
        elif choice == "6":
            print("ğŸ‘‹ Exiting Contact Manager. Goodbye!")
            break
        else:
            print("âŒ Invalid choice. Please try again.")


main()
